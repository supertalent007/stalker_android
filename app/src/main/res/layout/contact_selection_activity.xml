<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <org.stalker.securesms.util.views.DarkOverflowToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/signal_m3_toolbar_height"
        android:minHeight="@dimen/signal_m3_toolbar_height"
        android:theme="?attr/settingsToolbarStyle"
        app:contentInsetStartWithNavigation="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_left_24"
        app:title="@string/NewConversationActivity__new_message"
        app:titleTextAppearance="@style/Signal.Text.TitleLarge" />

    <org.stalker.securesms.components.ContactFilterView
        android:id="@+id/contact_filter_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:minHeight="44sp"
        app:cfv_autoFocus="false" />

    <fragment
        android:id="@+id/contact_selection_list_fragment"
        android:name="org.stalker.securesms.ContactSelectionListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>